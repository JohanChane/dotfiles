#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &>/dev/null && pwd)

# -------------------- 参数解析 --------------------
_pos=()

usage() {
  cat <<EOF
Usage: $0 [OPTIONS] [POS...]
  -h, --help    显示帮助并退出
EOF
  exit "${1:-0}"
}

while (($#)); do
  case $1 in
  -h | --help) usage 0 ;;
  -*)
    echo "ERROR: 未知选项 $1" >&2
    usage 1
    ;;
  *) _pos+=("$1") ;;
  esac
  shift
done

# -------------------- main --------------------
main() {
  # 没有位置参数时给出提示
  if ((${#_pos[@]} == 0)); then
    usage 0
  fi

  # 遍历所有位置参数并调用对应函数
  for cmd in "${_pos[@]}"; do
    case "$cmd" in
    all) install_all ;;
    basic_utils) install_basic_utils ;;
    vim) install_vim ;;
    *) echo "WARN: 未知命令 '$cmd'，已跳过" ;;
    esac
  done
}

# -------------------- 业务函数 --------------------
install_all() {
  install_basic_utils
  install_vim
}

install_basic_utils() {
  echo ">>> install basic utils ..."
  # ...
  echo ">>> install basic utils done"
}

install_vim() {
  echo ">>> install vim ..."
  # ...
  echo ">>> install vim done"
}

# -------------------- 入口 --------------------
main "$@"
